{
    "compilerOptions": {
      "allowJs": true,
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["package", "dist", "**/*.map"]
  }
  